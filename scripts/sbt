#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

java \
    -XX:+CMSClassUnloadingEnabled \
    -XX:MaxPermSize=256M \
    -Xms128M \
    -Xmx512M \
    -Xss1M \
    -Divy.home="${DIR}/.ivy" \
    -Djava.util.logging.config.file="$DIR/logging.properties" \
    -Dsbt.log.noformat=true \
    -jar "${HOME}/.sbt/sbt-launch-0.13.7.jar" \
     "$@"
