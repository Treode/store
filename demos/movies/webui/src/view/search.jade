.container-fluid(ng-controller="SearchCtrl")
  .row-fluid(ng-show="!results.actors && !results.movies")
    i.muted No results
  .row-fluid(ng-show="results.actors.length > 0")
    h1 Actors
    table.table
      thead
        th Name
      tbody
        tr(ng-repeat="a in results.actors")
          td
            a(href="#/actor/{{a.id}}") {{a.name}}
  .row-fluid(ng-show="results.movies.length > 0")
    h1 Movies
    table.table
      thead
        th Title
      tbody
        tr(ng-repeat="m in results.movies")
          td
            a(href="#/movie/{{m.id}}") {{m.title}}
